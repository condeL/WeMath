<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp">

                <TextView
                    android:id="@+id/user_quiz_taking_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="180dp"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="5:31" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/questionTextView_card"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_quiz_taking_timer">

                    <TextView
                        android:id="@+id/question_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Question 1" />
                </com.google.android.material.card.MaterialCardView>

                <RadioGroup
                    android:id="@+id/answers_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/questionTextView_card">

                    <RadioButton
                        android:id="@+id/answer1_radio"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:checked="false"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="visible" />

                    <RadioButton
                        android:id="@+id/answer2_radio"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="visible" />

                    <RadioButton
                        android:id="@+id/answer3_radio"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="visible" />

                    <RadioButton
                        android:id="@+id/answer4_radio"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="visible" />

                    <CheckBox
                        android:id="@+id/answer1_checkbox"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="gone" />

                    <CheckBox
                        android:id="@+id/answer2_checkbox"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="gone" />

                    <CheckBox
                        android:id="@+id/answer3_checkbox"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="gone" />

                    <CheckBox
                        android:id="@+id/answer4_checkbox"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/cards_elements_surface_outlinedhover"
                        android:visibility="gone"
                        tools:text="RadioButton"
                        tools:visibility="gone" />

                </RadioGroup>

                <Button
                    android:id="@+id/user_quiz_taking_finish_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/colorAccent"
                    android:drawablePadding="4dp"
                    android:text="Finish"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/user_quiz_taking_question_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="25dp"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/user_quiz_taking_finish_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answers_radio_group"
                    tools:text="Question 5/10" />

                <ImageView
                    android:id="@+id/quiz_takig_previous_question"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="25dp"
                    app:layout_constraintBottom_toTopOf="@id/user_quiz_taking_finish_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/answers_radio_group"
                    app:srcCompat="@drawable/arrow_left" />

                <ImageView
                    android:id="@+id/user_quiz_taking_next_question"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="25dp"
                    app:layout_constraintBottom_toTopOf="@id/user_quiz_taking_finish_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/answers_radio_group"
                    app:srcCompat="@drawable/arrow_right" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
